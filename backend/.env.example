# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001

# Frontend URL (for CORS)
# Local development:
FRONTEND_URL=http://localhost:5173
# Production (sandbooks.space):
# FRONTEND_URL=https://sandbooks.space

# Hopx API Configuration
HOPX_API_KEY=your_hopx_api_key_here

# Optional API token (set to enable token-based access control)
# API_ACCESS_TOKEN=change_me_for_production

# Rate limiting (per-IP)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Note: Local terminal routes are included in this backend
# Frontend validates backend is localhost before enabling local terminal
# When deployed to Azure, local terminal won't be accessible (frontend blocks it)

# Execution Configuration
MAX_EXECUTION_TIMEOUT=30

# Logging
LOG_LEVEL=info
